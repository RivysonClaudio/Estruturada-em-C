void volumeEsfera(float RAIO)
{
	float VOLUME;
	double PI = 2 * acos(0.0);

	VOLUME = (4 * PI * pow(RAIO, 3)) / 3;

	cout << "\nO volume e igual a: " << VOLUME << "\n\n\n";
}

void testeDeValidacao_NUMERO_PRIMO(int NUMERO)
{
	int PARAMETRO;
	int i = 1;
	int NAO_PRIMO = 0;

	while (i < NUMERO)
	{
		PARAMETRO = NUMERO % i;

		if ((PARAMETRO == 0) && (i != 1))
		{
			cout << "\nFALSO --> O numero digitado nao e primo" << "\n\n\n";
			NAO_PRIMO = 1;
			break;
		}

		i++;
	}

	if (NAO_PRIMO == 0)
	{
		cout << "\nVERDADEIRO --> O numero digitado e primo" << "\n\n\n";
	}
}

void conversorSeg(int SEGUNDOS)
{
	
	int HORAS = 0;
	int MINUTOS = 0;

	while (SEGUNDOS >= 60)
	{
		SEGUNDOS -= 60;
		MINUTOS += 1;
	}
	while (MINUTOS >= 60)
	{
		MINUTOS -= 60;
		HORAS += 1;
	}

	cout << "\n\nO evento durou " << HORAS << " horas, " << MINUTOS << " minutos e " << SEGUNDOS << " segundos.\n\n\n";
}

void conversorParaDias(int ANOS, int MESES, int DIAS)
{
	int RESTO;

	MESES = ANOS * 12;
	RESTO = (ANOS * 12) % 30;
	DIAS = (MESES * 30) + RESTO;

	cout << "\n\nSua idade em dias e igual a: " << DIAS << " dias.\n\n\n";
}

void valorPerfeito(int N)
{
	int i = 1;
	int SOMA_DOS_DIVISORES = 0;

	while (i < N)
	{
		if (N % i == 0)
		{
			SOMA_DOS_DIVISORES += i;
		}

		i++;
	}

	if (SOMA_DOS_DIVISORES == N)
	{
		cout << "\nVERDADEIRO --> E um numero perfeito!\n\n\n";
	}
	else
	{
		cout << "\nFALSO --> Nao e um numero perfeito.\n\n\n";
	}
}

void numerosEmOrdemCrescente(int A, int B, int C)
{

	int MAIOR, MEIO, MENOR;

	if (A > B) //Para o maior
	{
		MAIOR = A;
	}
	else
	{
		MAIOR = B;
	}
	if (C > B)
	{
		MAIOR = C;
	}

	if (A < B) //Para o menor
	{
		MENOR = A;
	}
	else
	{
		MENOR = B;
	}
	if (C < B)
	{
		MENOR = C;
	}

	if ((MAIOR == A && MENOR == B) //Para o meio
		|| (MAIOR == B && MENOR == A))
	{
		MEIO = C;
	}
	else if ((MAIOR == A && MENOR == C)
		|| (MAIOR == C && MENOR == A))
	{
		MEIO = B;
	}
	else if ((MAIOR == B && MENOR == C)
		|| (MAIOR == C && MENOR == B))
	{
		MEIO = A;
	}

	cout << "\n\nOrdem Crescente: " << MENOR << ", " << MEIO << ", " << MAIOR << "\n\n\n";
}

void numeroDeDivisores(int N)
{
	int i = 1;
	int SOMA_DOS_DIVISORES = 0;

	while (i < N)
	{
		if (N % i == 0)
		{
			SOMA_DOS_DIVISORES += 1;
		}

		i++;
	}

	SOMA_DOS_DIVISORES += 1; //Ele mesmo

	cout << "\nEste numero tem " << SOMA_DOS_DIVISORES << " divisores.\n\n\n";
}

void equacaoDaQuesta_2_13(float N)
{
	float S = 1 + (1 / 2) + (1 / 3) + (1 / 4) + (1 / 5) + (1 / N);

	cout << "\nResultado: " << S << "\n\n\n";
}
